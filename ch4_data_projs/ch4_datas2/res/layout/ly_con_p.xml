<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">    

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cp_title"
        android:gravity="center"/>
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cp_intro"/>
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    <!-- hor bar -->
    <View android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#9b9b9b"/>
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cp_introcp"/>
    
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    <!-- hor bar -->
    <View android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#9b9b9b"/>
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cp_introCR"/>
    
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ContentProvider与ConentResolver的大致关系如下图"/>
    
     <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/cr_cp"/>
    
    
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    <!-- hor bar -->
    <View android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#9b9b9b"/>
    <!-- space -->
    <Space android:layout_width="match_parent"
        android:layout_height="16dip"/>
    
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统自带"
        android:id="@+id/btn_cp_sys"/>
    
</LinearLayout>
</ScrollView>